<Start>:
    ActionBar:
        pos_hint: {'top':1}
        background_color: [0, 0.85, .76, 1]
        ActionView:
            use_separator: True
            ActionPrevious:
                title: 'Data Norg'
                with_previous: False
                app_icon: ''
            ActionGroup:
                text: 'File'
                mode: 'spinner'
                ActionButton:
                    text: 'Open File'
                    id: open_file
                    on_press:
                        root.open_file()
            ActionGroup:
                text: 'Tools' 
                mode: 'spinner'
                ActionButton:
                    text: 'Convert to csv'
                    on_press:
                        root.set_format_to(".csv")
                ActionButton:
                    text: 'Convert to xml'
                    on_press:
                        root.set_format_to(".xml")
                ActionButton:
                    text: 'Convert to json'
                    on_press:
                        root.set_format_to(".json")
            
            ActionButton:
                text: 'Quit'
                on_press: app.get_running_app().stop()
                

    GridLayout:
        cols: 1
        size_hint:(0.5, 0.5)
        pos_hint:{"center_x":0.5, "center_y":0.5}
        
        Image:
            source: "images\datanorg.png"
            
        



<OpenFile>:
    title: 'File'
    auto_dismiss: False
    background_color: [1, 0.5, 0, 0.5]
    size_hint:(0.9, 0.9)
    pos_hint:{"center_x":0.5, "center_y":0.5}
    BoxLayout:
        FileChooserListView:
            id:filechooser
        Button:
            size_hint:(None, None)
            pos_hint:{"center_x":0.5, "center_y":0.25}
            text: "Open"
            pos: 300, 125
            size: 80, 30
            background_color: (0, 0.85, .76, 1)
            on_press:
                root.load(filechooser.path, filechooser.selection)
                             
        Button:
            size_hint:(None, None)
            pos_hint:{"center_x":0.5, "center_y":0.25}
            text: "Cancel"
            pos: 300, 125
            size: 80, 30
            background_color: (1, 0, 0.25, 1)
            on_press:
                root.dismiss()

                
<WarningMessage>:
    BoxLayout:
        size_hint:(0.9, 0.9)
        pos_hint:{"center_x":0.5, "center_y":0.7}
        Label:
            id: warning_text
            text:''+root.warning
        Button:
            pos_hint:{"center_x":0.5, "center_y":0.7}
            size_hint:(None, None)
            text: "Cancel"
            size: 80, 30
            pos: 50, 50
            background_color: (1, 0, 0.25, 1)
            on_press:
                root.clear_widgets()
            

            
        

    
<PresentFile>:
    FloatLayout:
        size_hint:(1, 0.85)
        pos_hint:{"center_x":0.5, "center_y":0.5}
        Button:
            size_hint:(None, None)
            pos_hint:{"center_x":0.5, "center_y":0.95}
            text: "Cancel"
            pos: 300, 125
            size: 80, 30
            background_color: (1, 0, 0.25, 1)
            on_press:
                root.clear_widgets()
                
            
        BoxLayout:
            id: text_box
            TextInput:
                id: file_text
                text:''+root.text_input
                

            
        
