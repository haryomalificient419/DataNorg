<PresentFile>:
    FloatLayout:
        size_hint:(1, 0.85)
        pos_hint:{"center_x":0.5, "center_y":0.5}
        Button:
            size_hint:(None, None)
            pos_hint:{"center_x":0.5, "center_y":0.95}
            text: "Cancel"
            pos: 300, 125
            size: 80, 30
            background_color: (1, 0, 0.25, 1)
            on_press:
                root.clear_widgets()
            
        BoxLayout:
            id: text_box
            TextInput:
                id: file_text
                text:''+root.text_input
                

            
        
